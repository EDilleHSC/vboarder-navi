{
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "archiver": "^7.0.1",
    "ejs": "^3.1.9",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^8.20.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "http-server": "^14.1.1",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jsdom": "^22.1.0",
    "morgan": "^1.10.1",
    "playwright": "^1.44.0",
    "supertest": "^6.3.3",
    "tmp": "^0.2.1"
  },
  "scripts": {
    "test:unit": "jest --config jest.config.cjs",
    "test:e2e": "npx playwright test tests/e2e --retries=1",    "test:pester": "pwsh -NoProfile -Command \"Get-ChildItem tests/unit -Filter *.ps1 -File | ForEach-Object { Invoke-Pester -Script $_.FullName }\"",    "wait:presenter": "node tools/wait_for_presenter.js",
    "start:navi": "node runtime/current/mcp_server.js",
    "start:test-servers": "node scripts/start_test_servers.js",
    "start:test:servers": "node scripts/start_test_servers.js",
    "start:test:servers:log": "node scripts/start_test_servers.js > test-server.log 2>&1",
    "test:e2e:local": "node tests/e2e/router.e2e.js --silent",
    "serve:presenter": "node scripts/serve_presenter.js",
    "test:integration": "jest --config jest.config.cjs --runInBand --testPathPattern=tests/integration",
    "test:ci": "npx playwright test --reporter=line",
    "test": "npm run test:unit && npm run test:e2e"
  }
}
